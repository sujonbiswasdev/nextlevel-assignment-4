model Meal {
    id                String  @id @default(uuid())
    meals_name              String  @db.VarChar(100)
    description       String? @db.Text
    image            String?
    price             Int 
    isAvailable       Boolean @default(true)
    dietaryPreference DietaryPreference
    providerId        String
    category_name        String
    cuisine    String
    status   MealsStatus   @default(APPROVED)
    createdAt   DateTime        @default(now())
    updatedAt  DateTime   @updatedAt
    //   relationship
    provider   ProviderProfile @relation(fields: [providerId], references: [id], onDelete: Cascade)
    reviews     Review[]
    orderitem      Orderitem[]
    category Category        @relation(fields: [category_name], references: [name], onDelete: Cascade)
    @@map("meal")
}

enum DietaryPreference {
  HALAL
  VEGAN
  VEGETARIAN
  ANY
  GLUTEN_FREE
  KETO
  PALEO
  DAIRY_FREE
  NUT_FREE
  LOW_SUGAR
}

enum Cuisine {
  BANGLEDESHI
  ITALIAN
  CHINESE
  INDIAN
  MEXICAN
  THAI
  JAPANESE
  FRENCH
  MEDITERRANEAN
  AMERICAN
  MIDDLE_EASTERN
}
enum MealsStatus {
  PENDING
  APPROVED
  REJECTED
}